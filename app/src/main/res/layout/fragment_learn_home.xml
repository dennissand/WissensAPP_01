<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_learn_"
    tools:context=".ui.learn.LearnFragment">

    <Spinner
        android:id="@+id/spinner_learn_home_box"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:backgroundTint="@color/blue_light"
        android:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/ibtn_learn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="155dp"
        android:background="@color/white"
        android:backgroundTint="@null"
        android:src="@drawable/round_button_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_ok"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:backgroundTint="@null"
        android:src="@drawable/round_button_blue"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_learn"
        app:layout_constraintStart_toStartOf="@+id/ibtn_learn"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_learn" />

    <ImageButton
        android:id="@+id/ibtn_again"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:backgroundTint="@null"
        android:src="@drawable/round_button_blue"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_ok"
        app:layout_constraintStart_toStartOf="@+id/ibtn_ok"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_ok" />

    <TextView
        android:id="@+id/tV_learn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_learn"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_learn"
        app:layout_constraintStart_toStartOf="@+id/ibtn_learn"
        app:layout_constraintTop_toTopOf="@+id/ibtn_learn" />

    <ImageView
        android:id="@+id/ibtn_ok_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_ok"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_ok"
        app:layout_constraintStart_toStartOf="@+id/ibtn_ok"
        app:layout_constraintTop_toTopOf="@+id/ibtn_ok"
        app:srcCompat="@drawable/check_60"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/ibtn_again_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_again"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_again"
        app:layout_constraintStart_toStartOf="@+id/ibtn_again"
        app:layout_constraintTop_toTopOf="@+id/ibtn_again"
        app:srcCompat="@drawable/replay_60"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tV_learn_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/learn_cards_from_box"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>