<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_learn_"
    tools:context=".ui.learn.ChoiseLearnFragment">


    <ImageButton
        android:id="@+id/ibtn_start_learn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="130dp"
        android:background="@color/white"
        android:backgroundTint="@null"
        android:src="@drawable/round_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />



    <TextView
        android:id="@+id/tV_btn_learn_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_start_learn"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_start_learn"
        app:layout_constraintStart_toStartOf="@+id/ibtn_start_learn"
        app:layout_constraintTop_toTopOf="@+id/ibtn_start_learn" />

    <Spinner
        android:id="@+id/spinner_learn_choice_box"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>